<Window x:Class="TextFields.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextFields"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">

    <Window.Resources>
        <ResourceDictionary Source="/TextBoxStyle.xaml"/>        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Margin="10,0" Content="Name" Grid.Row="0" HorizontalAlignment="Left"
               VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="Name" Grid.Row="1" VerticalAlignment="Center" FontSize="20"/>

        <Label Margin="10,0" Content="Adress" Grid.Row="2" HorizontalAlignment="Left"
               VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="Address" Grid.Row="3" VerticalAlignment="Center" FontSize="20"/>
    </Grid>
</Window>
