@model TraineesITI.Areas.TrackCourses.Models.TrackCourse

@{
    ViewData["Title"] = "Edit";
    var courses = new SelectList(ViewBag.Courses, "Id", "Topic", Model.CourseId);
}

<h1>Edit</h1>
<a asp-action="Details" asp-controller="Tracks"
   asp-route-id="@ViewBag.Track.Id">
    <h3>@ViewBag.Track.Name</h3>
</a>

<h4>Track Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TrackId" value="@ViewBag.Track.Id"/>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <select asp-for="CourseId" class="form-control" asp-items="courses"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
