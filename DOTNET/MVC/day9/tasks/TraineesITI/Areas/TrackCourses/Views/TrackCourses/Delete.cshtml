@model TraineesITI.Areas.TrackCourses.Models.TrackCourse

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<a asp-action="Details" asp-controller="Tracks"
   asp-route-id="@ViewBag.Track.Id">
    <h3>@ViewBag.Track.Name</h3>
</a>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TrackCourse</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Track)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Track.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            <a asp-action="Details" asp-controller="Courses"
               asp-route-id="@Model.CourseId">
                @Html.DisplayFor(model => model.Course.Topic)
            </a>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
